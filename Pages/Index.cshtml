@page
@model IndexModel
@{
    ViewData["Title"] = "Fizz czy Buzz?";
}

<div>
    <h1 class="display-4 text-center">Fizzbuzz</h1>
    <form method="GET">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FizzBuzz.Number">Podaj liczbę</label>
            <input asp-for="FizzBuzz.Number" class="form-control" />
            <span asp-validation-for="FizzBuzz.Number" class="text-danger"></span>
        </div>
        
        <input type="submit" class="btn btn-success" value="Sprawdź"/>
    </form>
</div>
